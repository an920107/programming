{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal"
        },
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "cwd": "${workspaceRoot}\\.vscode\\classpath",
            "classPaths": ["${workspaceRoot}\\.vscode\\classpath"],
            "mainClass": "${file}",
            "vmArgs": "--module-path C:\\Compilers\\Java\\javafx-sdk-17.0.2\\lib --add-modules=javafx.controls,javafx.fxml"
        },
        {
            "name": "GDB - Windows",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/a.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Compilers/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build - C++ (Windows)"
        },
        {
            "name": "GDB - Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build - C++ (Linux)",
        },
        {
            "name": "Assembly32",
            "type": "gdb",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/a.so",
            "stopOnEntry": false,
            "preLaunchTask": "ASM32"
        }
    ]
}