{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build - C++ (Windows)",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\.vscode\\a.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "cppbuild",
            "label": "build - C++ (Linux)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-Ofast",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/.vscode/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "ASM32",
            "command": "vscodeFolder=${workspaceFolder}/.vscode; nasm -F dwarf -g -f elf32 -i ${fileDirname} -o $vscodeFolder/a.o ${file}; ld -m elf_i386 -o $vscodeFolder/a.so $vscodeFolder/a.o;",
            "problemMatcher": {
                "pattern": {
                  "regexp": "error"
                }
              },
            "presentation": {
                "focus": true,
                "panel": "dedicated",
                "reveal": "silent",
                "clear": true
            }
        }
    ]
}